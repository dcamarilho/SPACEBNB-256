<div class="navbar navbar-light navbar-expand-sm  navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "planet-and-moons.png" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Create a Flat', new_flat_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'See all Flats', flats_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown ml-4 mr-1">
          <% if current_user.photo.file.nil? %>
            <%= image_tag 'https://cdn0.iconfinder.com/data/icons/avatar-4/512/Astronaut-512.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" } %>
          <% else %>
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% end %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Dashboard", dashboard_path, class: "dropdown-item" %>
            <%= link_to "Flats", flats_path, class: "dropdown-item" %>
            <%= link_to 'Settings', edit_user_path(current_user), class: 'dropdown-item' %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: 'btn btn-outline-light' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
