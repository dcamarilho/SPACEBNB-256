<div class="container">
  <div class="content-wrapper">
    <% if current_user == @user %>
      <h1>Edit profile</h1>

      <%= render 'form', user: current_user %>
      <br>
    <% else %>
      <h3>Sorry <%= current_user.firstname %>, you can't edit other user's profile.</h3>
    <% end %>
      <br>
    <%= link_to 'Back', dashboard_path, class: 'btn btn-outline-dark' %>
  </div>
</div>
