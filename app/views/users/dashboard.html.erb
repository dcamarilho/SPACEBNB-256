<div class="container">
  <div class="content-wrapper">
    <h3>Name:</h3>
    <p><%= "#{current_user.firstname} #{current_user.lastname}" %></p>
    <h3>Email:</h3>
    <p><%= current_user.email %></p>
    <h3>Phone:</h3>
    <p><%= current_user.phone %></p>
    <h3>You have bought <span class ="span-model"><%= current_user.orders.count %> flats:</span></h3>

    <% current_user.orders.each do |x| %>
    <p><%= x.flat.name %> at <span class="span-dashboard"><%= x.flat.planet %></span> Price: Z$ <%= x.flat.price %></p>
    <% end %>

    <h3 class="my-4">Your current flats for <span class="span-model">sale:</span></h3>
    <div class="row">
      <% current_user.flats.each do |flat| %>
      <div class="col-md-3 col-sm-6 mb-4" >
        <%= link_to flat.name, flat %>
        <p>Z$<%= flat.price %></p>
        <%= cl_image_tag flat.photo, class: "d-block w-100 rounded" %>
        <br>
        <br>
        <%= link_to 'Edit', edit_flat_path(flat), class: 'btn btn-outline-light btn-sm' %> | <%= link_to "Delete", flat_path(flat), method: :delete, data: { confirm: "Are you sure you want to delete this flat?" }, class: 'btn btn-outline-danger btn-sm' %>
      </div>
    <% end %>
    </div>
  </div>
</div>

